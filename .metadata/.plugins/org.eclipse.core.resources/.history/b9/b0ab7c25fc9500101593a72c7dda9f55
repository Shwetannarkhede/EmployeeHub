    <script>
        // Modal functionality
        function openModal(modalId) {
            document.getElementById(modalId).style.display = 'block';
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
        }

        function openEmployeeLogin() {
            document.getElementById('loginTitle').textContent = 'Employee Login';
            openModal('loginModal');
        }

        function openHRLogin() {
            document.getElementById('loginTitle').textContent = 'HR Login';
            openModal('loginModal');
        }

        function openEmployeeRegister() {
            document.getElementById('registerTitle').textContent = 'Employee Registration';
            openModal('registerModal');
        }

        function openHRRegister() {
            document.getElementById('registerTitle').textContent = 'HR Registration';
            openModal('registerModal');
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modals = document.getElementsByClassName('modal');
            for (let modal of modals) {
                if (event.target == modal) {
                    modal.style.display = 'none';
                }
            }
        }

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
